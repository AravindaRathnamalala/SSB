<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_50sdp"
            android:paddingBottom="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text="Name"/>


                    <EditText
                        android:id="@+id/editName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_8sdp"
                        android:textColor="#2C2C2C"
                        android:singleLine="true"
                        android:textAppearance="@style/editText"
                        android:background="@drawable/edit_text_background"
                        style="@style/editText"
                        android:paddingLeft="@dimen/_8sdp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text="Address"/>


                    <EditText
                        android:id="@+id/editAddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_8sdp"

                        android:textColor="#2C2C2C"
                        android:singleLine="true"
                        android:textAppearance="@style/editText"
                        android:background="@drawable/edit_text_background"
                        style="@style/editText"
                        android:paddingLeft="@dimen/_8sdp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text="Date of Birth"/>


                    <EditText
                        android:id="@+id/editDOB"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_8sdp"
                        android:textColor="#2C2C2C"
                        android:singleLine="true"
                        android:textAppearance="@style/editText"
                        android:background="@drawable/edit_text_background"
                        style="@style/editText"
                        android:paddingLeft="@dimen/_8sdp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text="Name of Guardian"/>


                    <EditText
                        android:id="@+id/editGuardianName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_8sdp"
                        android:textColor="#2C2C2C"
                        android:singleLine="true"
                        android:textAppearance="@style/editText"
                        android:background="@drawable/edit_text_background"
                        style="@style/editText"
                        android:paddingLeft="@dimen/_8sdp"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text="National Identity Card No of Guardian"/>


                    <EditText
                        android:id="@+id/editNIC"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_8sdp"
                        android:textColor="#2C2C2C"
                        android:singleLine="true"
                        android:textAppearance="@style/editText"
                        android:background="@drawable/edit_text_background"
                        style="@style/editText"
                        android:paddingLeft="@dimen/_8sdp"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text="Type of premium payment"/>


                    <EditText
                        android:id="@+id/editTypePremium"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_8sdp"
                        android:textColor="#2C2C2C"
                        android:singleLine="true"
                        android:textAppearance="@style/editText"
                        android:background="@drawable/edit_text_background"
                        style="@style/editText"
                        android:paddingLeft="@dimen/_8sdp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text="Monthly pension"/>


                    <EditText
                        android:id="@+id/monthlyPension"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_8sdp"
                        android:textColor="#2C2C2C"
                        android:singleLine="true"
                        android:textAppearance="@style/editText"
                        android:background="@drawable/edit_text_background"
                        style="@style/editText"
                        android:paddingLeft="@dimen/_8sdp"
                        />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnSurekumaSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:text="Submit"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/menu_button"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"/>


    </LinearLayout>


</RelativeLayout>