<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.agentRegistration.AgentRegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_50sdp"
            android:paddingBottom="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text="Name"/>


                    <EditText
                        android:id="@+id/editName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_8sdp"
                        android:textColor="#2C2C2C"
                        android:singleLine="true"
                        android:textAppearance="@style/editText"
                        android:background="@drawable/edit_text_background"
                        style="@style/editText"
                        android:paddingLeft="@dimen/_8sdp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text="Address"/>


                    <EditText
                        android:id="@+id/editAddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_8sdp"

                        android:textColor="#2C2C2C"
                        android:singleLine="true"
                        android:textAppearance="@style/editText"
                        android:background="@drawable/edit_text_background"
                        style="@style/editText"
                        android:paddingLeft="@dimen/_8sdp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text="Email"/>


                    <EditText
                        android:id="@+id/editEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_8sdp"
                        android:textColor="#2C2C2C"
                        android:singleLine="true"
                        android:textAppearance="@style/editText"
                        android:background="@drawable/edit_text_background"
                        style="@style/editText"
                        android:paddingLeft="@dimen/_8sdp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text="Gender"/>


                    <EditText
                        android:id="@+id/editGender"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_8sdp"
                        android:textColor="#2C2C2C"
                        android:singleLine="true"
                        android:textAppearance="@style/editText"
                        android:background="@drawable/edit_text_background"
                        style="@style/editText"
                        android:paddingLeft="@dimen/_8sdp"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text="NIC"/>


                    <EditText
                        android:id="@+id/editNIC"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_8sdp"
                        android:textColor="#2C2C2C"
                        android:singleLine="true"
                        android:textAppearance="@style/editText"
                        android:background="@drawable/edit_text_background"
                        style="@style/editText"
                        android:paddingLeft="@dimen/_8sdp"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text="Contact No"/>


                    <EditText
                        android:id="@+id/editTelephone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_8sdp"
                        android:textColor="#2C2C2C"
                        android:singleLine="true"
                        android:textAppearance="@style/editText"
                        android:background="@drawable/edit_text_background"
                        style="@style/editText"
                        android:paddingLeft="@dimen/_8sdp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text="District"/>


                    <EditText
                        android:id="@+id/editDistrict"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_8sdp"
                        android:textColor="#2C2C2C"
                        android:singleLine="true"
                        android:textAppearance="@style/editText"
                        android:background="@drawable/edit_text_background"
                        style="@style/editText"
                        android:paddingLeft="@dimen/_8sdp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_4sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text="DS Office"/>


                    <EditText
                        android:id="@+id/editDsOffice"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_8sdp"
                        android:textColor="#2C2C2C"
                        android:singleLine="true"
                        android:textAppearance="@style/editText"
                        android:background="@drawable/edit_text_background"
                        style="@style/editText"
                        android:paddingLeft="@dimen/_8sdp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/layout_border"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp">

                    <ImageView
                        android:id="@+id/ivPhoto"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_220sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_30sdp"
                        android:src="@drawable/empty_applicant_pic"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btnPhoto"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:alpha="0.9"
                        android:background="@drawable/ic_cam"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnSurekumaSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:text="Submit"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/menu_button"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"/>


    </LinearLayout>

</RelativeLayout>